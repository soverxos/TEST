#!/usr/bin/env python3
"""
SwiftDevBot CLI - главная точка входа
"""

import sys
from pathlib import Path

# Получаем путь к sdb.py в той же директории
current_script_path = Path(__file__).resolve()
sdb_py_path = current_script_path.parent / "sdb.py"

# Запускаем sdb.py с переданными аргументами
sys.argv[0] = str(sdb_py_path)
exec(open(sdb_py_path).read())
